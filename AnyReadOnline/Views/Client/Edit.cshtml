<body style="background-color:tomato">
    <div class="container">
        <div class="row">
            <div class="col">
                <br><br><br><h4 class="text-white">User Settings</h4>
                <small class="text-white">Any changes you make will apply to your <br> Anyread Account.</small><br><br><br>
            </div>

            <div class="col-3"></div>

            <div class="col">
                <br><br><br><br><br><button type="submit" class="btn btn-dark">Save Changes</button><br><br><br>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <h4 class="text-white">Profile Settings</h4><br>
                <div class="form-group">
                    <label for="FirstName"></label>
                    <input type="text" class="form-control" name="fname" id="fname" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="LastName"></label>
                    <input type="text" class="form-control" name="lname" id="lname" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="PhoneNumber"></label>
                    <input type="text" class="form-control" name="pnumber" id="pnumber" placeholder="Phone Number">
                </div><br>
                <div class="form-group">
                    <select class="form-control" name="gender" id="gender">
                        <option>Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select><br>
                </div>
                <div class="form-group">
                    <select class="form-control" name="country" id="country">
                        <option>Country</option>
                        <option value="male">Kosova</option>
                        <option value="female">Shqiperia</option>
                    </select><br>
                </div>
                <div class="form-group">
                    <select class="form-control" name="city" id="city">
                        <option>City</option>
                        <option value="prishtina">Prishtina</option>
                        <option value="prizreni">Prizreni</option>
                    </select>
                </div>
            </div>

            <div class="col-3"></div>

            <div class="col">
                <h4 class="text-white">Account Settings</h4><br>
                <div class="form-group">
                    <label for="Email"></label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="E-mail">
                </div>
                <div class="form-group">
                    <label for="Password"></label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div><br>
                <h4 class="text-white">Language Settings</h4><br>
                <div class="form-group">
                    <label for="Language"></label>
                    <select class="form-control" name="language" id="language">
                        <option>Language</option>
                        <option value="prishtina">Albanian</option>
                        <option value="prizreni">English</option>
                    </select>
                </div>
            </div>
        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>

