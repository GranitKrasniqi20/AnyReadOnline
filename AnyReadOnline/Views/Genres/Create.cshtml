@model AnyReadOnline.BOL.Genre

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br /><h4>Add New Genre</h4>
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h5>Genre Name</h5>
            <div class="row">
                <div class="col-5">
                    @Html.EditorFor(model => model.GenreName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GenreName, "", new { @class = "text-danger" })
                </div>

                <div class="col-5">
                    <input type="submit" class="btn btn-primary mx-3 lx-5" value="Create Genre" onclick="location.href='@Url.Action("Create","Genres")'" />
                </div>
            </div>
        </div>
        <br />
        <p>You only need to write the Name of the Genre, ID will be created with UID.</p>
        <br />
    </div>
}

<div style="font-weight: bold;">
    @Html.ActionLink("Go to Language List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
