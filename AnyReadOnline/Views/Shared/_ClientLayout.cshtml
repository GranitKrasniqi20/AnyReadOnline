@using Microsoft.AspNet.Identity.Owin;
@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="@Url.Content("~/Content/Site.css")" type="text/css" />
    <link href="~/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet">

    <!-- Jquery DataTables-->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css" />


    <!-- Font Awesome Icons -->
    <!--<link rel="stylesheet" href="~/Content/fontawesome/font-awesome.min.css" />-->

    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- HEADER -->
    <header>
        <!-- UPPER ORANGE NAVIGATION -->
        <nav id="upperNav" class="navbar">
            <div class="container">
                <div class="col">
                    <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                        <img src="~/Content/img/anyread_name_white.png" width="150" />
                    </a>
                </div>
                <div class="col">
                    <ul class="nav justify-content-end">
                        <li class="nav-item"><a href="#" class="language-selection text-decoration-none text-danger font-weight-bold mx-2">EN</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a href="@Url.Action("MyProfile", "Client")" class="text-decoration-none white-text font-weight-bold mx-2">@User.Identity.Name</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a href="@Url.Action("Login", "Client")" class="text-decoration-none white-text font-weight-bold mx-2">@AnyReadOnline.Resources.HomeTexts.LogIn</a></li>
                        }

                        <li class="nav-item"><a href="@Url.Action("GoToCart", "Books")" class="text-decoration-none white-text font-weight-bold mx-2"><i class="fas fa-shopping-cart"></i></a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- LOWER WHITE NAVIGATION -->
        <nav id="lowerNav" class="navbar navbar-light">
            <div class="container">
                <div class="col-6">
                    @using (Html.BeginForm("Searching", "Home", FormMethod.Get, new { @class = "form-group my-auto" }))
                    {
                        <input class="form-control" name="text" type="search" placeholder=@AnyReadOnline.Resources.HomeTexts.Search aria-label="Search">
                    }
                </div>
                <div class="col-6">
                    <ul class="nav justify-content-end">
                        <li class="nav-item"><a href="@Url.Action("Index", "Home")" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.Home</a></li>
                        <li class="nav-item"><a href="@Url.Action("Categories", "Home")" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.Categories</a></li>
                        <li class="nav-item"><a href="@Url.Action("Searching", "Home")" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.Shop</a></li>
                        <li class="nav-item"><a href="#" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.Blog</a></li>
                        <li class="nav-item"><a href="@Url.Action("About", "Home")" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.AboutUs</a></li>
                        <li class="nav-item"><a href="@Url.Action("Index", "MultiLanguages")" class="orange-text font-weight-bold text-decoration-none">@AnyReadOnline.Resources.HomeTexts.Language</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="row py-5">
                <div class="col">
                    <img src="~/Content/img/anyread_name.png" width="180" class="pb-4" />
                    <p class="pb-3">
                        Rr. Rexhep Mala, Nr. 35,
                        <br>
                        Prishtinë, Kosovë
                    </p>
                    <p>
                        <a href="#" class="text-decoration-none black-text">info@anyread.com</a>
                        <br>
                        <a href="#" class="text-decoration-none black-text">+383 49 123 123</a>
                    </p>
                </div>
                <div class="col">
                    <h4 class="pb-4">@AnyReadOnline.Resources.HomeTexts.Explore</h4>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Home</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Categories</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Shop</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Blog</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.AboutUs</a></p>
                </div>
                <div class="col">
                    <h4 class="pb-4">@AnyReadOnline.Resources.HomeTexts.CustomerService</h4>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.HelpCenter</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Returns</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Accessibility</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.ContactUs</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.SignJoin</a></p>
                </div>
                <div class="col">
                    <h4 class="pb-4">@AnyReadOnline.Resources.HomeTexts.Policy</h4>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.ReturnPolicy</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.TermsOfUse</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Security</a></p>
                    <p><a href="#" class="text-decoration-none black-text">@AnyReadOnline.Resources.HomeTexts.Privacy</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <!--Jquery DataTables-->
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    @RenderSection("scripts", required: false)
    <!-- Option 2: jQuery, Popper.js, and Bootstrap JS
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    -->
</body>
</html>
