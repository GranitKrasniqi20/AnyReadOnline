@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<!-- MAIN -->
<main>
    <!-- Large Carousel -->
    <section>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/img/anyread_home_cover_1.2.jpg" class="d-block w-100" alt="..." />
                    <div class="container">
                        <div class="carousel-caption d-none d-md-block positioning-caption white-text">
                            <h1>Find the book you're looking for!</h1>
                            <button type="button" class="btn btn-white my-4">Shop Now</button>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Content/img/anyread_home_cover_2.2.jpg" class="d-block w-100" alt="..." />
                    <div class="container">
                        <div class="carousel-caption d-none d-md-block positioning-caption white-text">
                            <h1>Search our library by category!</h1>
                            <button type="button" class="btn btn-white my-4">Shop Now</button>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="~/Content/img/anyread_home_cover_3.2.jpg" class="d-block w-100" alt="..." />
                    <div class="container">
                        <div class="carousel-caption d-none d-md-block positioning-caption black-text">
                            <h1>Large collection of Books!</h1>
                            <button type="button" class="btn btn-black my-4">Shop Now</button>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>

    <div class="container">
        <!-- Featured Categories Section -->
        <section class="my-5">
            <div class="row">
                <div class="col">
                    <h4>Featured Categories</h4>
                </div>
                <div class="col text-right my-auto">
                    <a href="#" class="text-danger">View All</a>
                </div>
            </div>
            <div class="row my-3">
                <div class="col start-point">
                    <div class="category-box my-blue">
                        <a href="#" class="text-white"><h4>Biographies</h4></a>
                        <a href="#" class="text-white">Shop Now</a>
                    </div>
                </div>
                <div class="col">
                    <div class="category-box my-red">
                        <a href="#" class="text-white"><h4>History</h4></a>
                        <a href="#" class="text-white">Shop Now</a>
                    </div>
                </div>
                <div class="col">
                    <div class="category-box my-green">
                        <a href="#" class="text-white"><h4>Economics</h4></a>
                        <a href="#" class="text-white">Shop Now</a>
                    </div>
                </div>
                <div class="col end-point">
                    <div class="category-box my-orange">
                        <a href="#" class="text-white"><h4>Fiction</h4></a>
                        <a href="#" class="text-white">Shop Now</a>
                    </div>
                </div>
            </div>
        </section>
        <!-- Bestselling Books Section -->
        <section class="my-5">
            <div class="row">
                <div class="col">
                    <h4>Bestselling Books</h4>
                </div>
                <div class="col text-right my-auto">
                    <a href="#" class="text-danger">View All</a>
                </div>
            </div>
            <div class="row my-3">
                @foreach (AnyReadOnline.BOL.Book item in ViewBag.myEarlyBooks)
                {
                <div class="col">
                    <div class="custom-image-container">
                        <img src="@Url.Content(item.ImagePath)" width="253" />
                        <h4 class="my-book-title"><a href="#" class="text-decoration-none black-text">@item.Title</a></h4>
                        <p class="text-muted">@string.Format(item.Author.FirstName + " " + item.Author.LastName)</p>
                        <h4 class="text-danger font-weight-bold my-book-price">€@item.Price</h4>
                    </div>
                </div>
                }    
            </div>
        </section>
        <!-- Newest Releases Section -->
        <section class="my-5">
            <div class="row">
                <div class="col">
                    <h4>Newest Releases</h4>
                </div>
                <div class="col text-right my-auto">
                    <a href="#" class="text-danger">View All</a>
                </div>
            </div>
            <div class="row my-3">
                @foreach (AnyReadOnline.BOL.Book item in ViewBag.myLateBooks)
                {
                    <div class="col">
                        <div class="custom-image-container">
                            <img src="@Url.Content(item.ImagePath)" width="253" />
                            <h4 class="my-book-title"><a href="#" class="text-decoration-none black-text">@item.Title</a></h4>
                            <p class="text-muted">@string.Format(item.Author.FirstName + " " + item.Author.LastName)</p>
                            <h4 class="text-danger font-weight-bold my-book-price">€@item.Price</h4>
                        </div>
                    </div>
                }
                
            </div>
        </section>
        <!-- Favorite Authors Section -->
        <section id="authorSection" class="my-5">
            <div class="row">
                <div class="col">
                    <h4>Favorite Authors</h4>
                </div>
                <div class="col text-right my-auto">
                    <a href="#" class="text-danger">View All</a>
                </div>
            </div>
            <div class="row my-3">
                @foreach (AnyReadOnline.BOL.Author item in ViewBag.myEarlyAuthors)
                {
                    <div class="col">
                        <div class="custom-image-container">
                            <img src="@Url.Content(item.ImagePath)" width="253" />
                            <h4 class="my-book-title"><a href="#" class="text-decoration-none black-text">@string.Format(item.FirstName + " " + item.LastName)</a></h4>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</main>

