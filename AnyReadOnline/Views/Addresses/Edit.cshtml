@model AnyReadOnline.BOL.Address

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Addresses", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <main>
        <section>
            <div class="container">
                <div class="row my-5">
                    <div class="col mx-5">
                        <h2>Edit Address</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col mx-5 mb-5">
                        <form>
                            <div class="form-group">
                                <label for="txtNameAddress">Name</label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="txtLastNameAddress">Last Name</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="txtEmailAddress">Email</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                                <label for="txtAddress1Address">Address 1</label>
                                @Html.EditorFor(model => model.Address1, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="txtAddress2Address">Address 2</label>
                                @Html.EditorFor(model => model.Address2, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="comboCountryAddress">Select Country</label>
                                <select class="form-control" id="comboCountryAddress">
                                    @foreach (AnyReadOnline.BOL.Country item in ViewBag.Countries)
                                    {
                                        if (item.CountryID == ViewBag.MyCountry)
                                        {
                                            <option value="@item.CountryID" selected>@item.CountryName</option>
                                        }
                                        else
                                        {
                                            <option value="@item.CountryID">@item.CountryName</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="txtCityAddress">City</label>
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="txtPostalCodeAddress">Postal Code</label>
                                @Html.EditorFor(model => model.PostalCode, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label for="txtPhoneNumberAddress">Phone No</label>
                                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </form>
                    </div>
                    <div class="col mt-4">
                        <p>Check and edit your address with correct information! Your data will not be misused!</p>
                        <input type="submit" value="Update" class="btn btn-dark" />
                        <div class="mt-5">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
}
