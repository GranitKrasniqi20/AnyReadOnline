@model IEnumerable<AnyReadOnline.BOL.Address>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}

<main>
    <section>
        <div class="container">
            <div class="row my-5">
                <div class="col-8">
                    <h2>Manage My Addresses</h2>
                    <p>Check and edit your billing / shipping addresses</p>
                </div>
                <div class="col-4 d-flex justify-content-end"
                     style="padding: 2em;">
                    <button type="button" class="btn btn-dark">Add Address</button>
                </div>
            </div>

            <div class="row my-5">
                <div class="col">
                    <table class="table my-5 table-bordered table-hover">
                        <thead class="bg-danger white-text">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.FirstName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.LastName)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Address1)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Address2)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.City)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PostalCode)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address1)
                                    </td>
                                    @if (item.Address2 == null)
                                    {
                                        <td><i>null</i></td>
                                    }
                                    else
                                    {
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                    }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.City)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PostalCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                                    </td>
                                    <td class="text-primary">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.AddressID })
                                    </td>
                                    <td class="text-danger">
                                        @Html.ActionLink("Delete", "Delete", new { id = item.AddressID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>
</main>
