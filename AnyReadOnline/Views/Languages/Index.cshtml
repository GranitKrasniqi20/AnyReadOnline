@model IEnumerable<AnyReadOnline.BOL.Language>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <br /><br />
    <h2>List of Languages</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <table id="languageTable" class="display" border="1">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LanguageName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InsDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdNo)
                </th>
                <th></th>
            </tr>
        <thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanguageName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InsDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdNo)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.LanguageID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.LanguageID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.LanguageID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
            $(document).ready(function () {
                $('#languageTable').DataTable();
            });
    </script>
}

