@model IEnumerable<AnyReadOnline.BOL.Language>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <br /><br />
    <h2>Languages</h2>

    <p style="float: right;">
        @*@Html.ActionLink("Create New", "Create")*@
        <input type="button" class="btn btn-success mx-3 lx-5" value="Add New" onclick="location.href='@Url.Action("Create","Languages")'" />
    </p>

    <table id="languageTable" class="display" border="1">
        <thead>
            <tr style="background-color:dodgerblue; color:white;">
                <th>
                    ID
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LanguageName)
                </th>
                @* <th>
                        @Html.DisplayNameFor(model => model.InsBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InsDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdNo)
                    </th>*@
            <th>
                <b style="margin-left:30px;">Actions</b>
            </th>
            </tr>
        <thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanguageID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LanguageName)
                    </td>
                    @* <td>
                            @Html.DisplayFor(modelItem => item.InsBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InsDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdNo)
                        </td>*@
                    <td>
                        <input type="button" class="btn btn-secondary mx-3 lx-5" @* title="..."*@ value="Edit" onclick="location.href='@Url.Action("Edit"@*, "Genres"*@, new { id = item.LanguageID })'" />
                        <!--<input type="button" class="btn btn-secondary mx-3 lx-5"--> @* title="..."*@ <!--value="Details" onclick="location.href='@@Url.Action("Details", "Genres", new { id = item.LanguageID })'" />-->
                        <input type="button" class="btn btn-danger mx-3 lx-5" @* title="..."*@ value="Delete" onclick="location.href='@Url.Action("Delete"@*, "Genres"*@, new { id = item.LanguageID })'" />

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
            $(document).ready(function () {
                var table = $('#languageTable').removeAttr('width').DataTable({
                        @* scrollY: "300px",
                    scrollX: false,*@
                    scrollCollapse: true,
                        columnDefs: [
                            { width: 100, targets: 0 },
                            { width: 800, targets: 1 },
                            { width: 200, targets: 2, orderable: false }
                        ],
                        fixedColumns: false
                });
            });
    </script>
}

