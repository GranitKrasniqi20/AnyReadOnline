@model AnyReadOnline.BOL.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<head>
    <title>EditBookPage</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- Font Awesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
          integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body style="background-color: #eeeeee; font-weight:bold;">
    <div class="container">
        <div class="row">
            <div class="col-10">
                <br><p style="font-size: large;">Edit Existing Book</p><br>
            </div>

            <div class="col-2">
                <div style="color:darkgray">
                    <br />Book ID Number: <br /> &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&ensp;@Model.BookID<br />
                </div>
            </div>
        </div>

        @using (Html.BeginForm("Edit", "Books", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <!--Table-->
            <div class="table">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!--Row-->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="Title">Book Title</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--Row-->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="Description">Book Description</label>
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--Row-->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="Author">Author</label>
                            <select class="form-control" name="Author.AuthorID">
                                @foreach (AnyReadOnline.BOL.Author item in ViewBag.Authors)
                                {
                                    if (item.AuthorID == ViewBag.MyAuthor)
                                    {
                                        <option value="@item.AuthorID" selected>@string.Format(item.FirstName + " " + item.LastName)</option>
                                    }
                                    else
                                    {
                                        <option value="@item.AuthorID">@string.Format(item.FirstName + " " + item.LastName)</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="Genre">Genre</label>
                            <select class="form-control" name="Genre.GenreID">
                                @foreach (AnyReadOnline.BOL.Genre item in ViewBag.Genres)
                                {
                                    if (item.GenreID == ViewBag.MyGenre)
                                    {
                                        <option value="@item.GenreID" selected>@item.GenreName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.GenreID">@item.GenreName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="PublishPlace">Publish Place</label>
                            @Html.EditorFor(model => model.PublishPlace, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PublishPlace, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="ISBN">ISBN</label>
                            @Html.EditorFor(model => model.ISBN, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ISBN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col">
                        <div class="form-group">
                            <label for="Language">Language</label>
                            <select class="form-control" name="Language.LanguageID">
                                @foreach (AnyReadOnline.BOL.Language item in ViewBag.Languages)
                                {
                                    if (item.LanguageID == ViewBag.MyLanguage)
                                    {
                                        <option value="@item.LanguageID" selected>@item.LanguageName</option>
                                    }
                                    else 
                                    {
                                        <option value="@item.LanguageID">@item.LanguageName</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="PublishHouse">PublishHouse</label>
                            <select class="form-control" name="PublishHouse.PublishHouseID">
                                @foreach (AnyReadOnline.BOL.PublishHouse item in ViewBag.PublishHouses)
                                {
                                    if (item.PublishHouseID == ViewBag.MyPublishHouse)
                                    {
                                        <option value="@item.PublishHouseID" selected>@item.PublishHouseName</option>
                                    }
                                    else
                                    {
                                        <option value="@item.PublishHouseID">@item.PublishHouseName</option>
                                    }

                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="PublishYear">Publish Year</label>
                            @Html.EditorFor(model => model.PublishYear, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PublishYear, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="PageNumber">Number of Pages</label>
                            @Html.EditorFor(model => model.PageNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PageNumber, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Price">Price</label>
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--Row-->
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="Weight">Weight</label>
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Length">Length</label>
                            @Html.EditorFor(model => model.Length, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Length, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label for="Width">Width</label>
                            @Html.EditorFor(model => model.Width, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Width, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="Height">Height</label>
                            @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <br />
                <!--Row-->
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label>Upload Book Cover</label>
                            <div class="col-md-10">
                                <input type="file" name="ImageFile" required />
                            </div>
                        </div>
                        <br />
                        <div>
                            @Html.ActionLink("Go to Product Listing", "Index")
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Publish Book" class="btn btn-primary btn-lg" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




